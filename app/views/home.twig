{% extends 'layout.twig' %}
{% import 'menuitem.twig' as m %}
{% block content %}
<div class="bg-base-200 min-h-screen">
    <h1 class="text-5xl font-bold text-center py-4">{{ title|default('Homepage') }}</h1>
    <div class="flex flex-col md:flex-row">
        <ul class="menu rounded-box basis-full md:basis-1/3">
            {% for item in menu %}
            {{ m.menuitem(item) }}
            {% endfor %}
            <li>
                <input type="submit" value="/about/project method: POST" form="postform" />
            </li>
        </ul>
        <div class="basis-full md:basis-2/3">
            {% apply spaceless %}
            <div class="p-4">
                {{- content|raw -}}
            </div>
            <div class="flex">
                <div class="basis-1/3 ps-4">
                    Pattern:<br>
                    Uri:<br>
                    Method:<br>
                    Handler:<br>
                </div>
                <div class="basis-2/3">
                    {{ pattern }}<br>
                    {{ uri }}<br>
                    {{ method }}<br>
                    {{ handler }}<br>
                </div>
            </div>           
            {% endapply %}
            <form id="postform" method="post" action="/about/project"></form>
        </div>
    </div>
</div>
{% endblock %}
